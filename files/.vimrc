"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Colors and UI
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" enable syntax highlighting
syntax on

" set colorscheme
set t_Co=256
colorscheme molokai

" line numbers
set number

" -----------------------------------------
" ------ Tabs and Indent ------------------
" -----------------------------------------
" spaces instead of tabs
set expandtab

" smart tabs and indent
set smarttab
set ai
set si
set wrap

" width
set shiftwidth=4
set tabstop=4
